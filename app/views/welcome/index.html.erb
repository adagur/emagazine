        <script src="/assets/javascript/bootstrap-datepicker.js"></script>
        <script src="/assets/javascript/main-custom.js"></script> -->
        <%= stylesheet_link_tag "application", media: "all" %>
        <%= javascript_include_tag "application" %>
    </head>
    <body ng-app="eshopApp" class="body-custom">
    <nav class="navbar navbar-inverse">
		<div class="container-fluid">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				<a class="navbar-brand" href="#">eShop</a>
			</div>
			<div class="collapse navbar-collapse" id="myNavbar">
				<ul class="nav navbar-nav">
					<li class="active"><a href="welcome">Home</a></li>
					<li><a href="aboutUs"><b>About Us</b></a></li>
                    <li><a href="emagazine"><b>Our Luggage Story</b></a></li>
					<li><a href="footwears"><b>Our Furniture Story</b></a></li>
                    <li><a href="hats"><b>Our Footwears Story</b></a></li>
                    <li><a href="storePickup"><b>Our most loved food</b></a></li>
                    <li><a href="contactUs"><b>Contact Us</b></a></li>
				</ul>
				<ul class="nav navbar-nav navbar-right">
					<li><a href="#"><span class="glyphicon glyphicon-user"></span> Welcome Guest</a></li>
					<li><a href="#" data-toggle="modal" data-target="#loginModal"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
				</ul>
			</div>
		</div>
	</nav>
	<div id="magazineCarousal" class="carousel slide" data-ride="carousel">
  		<!-- Indicators -->
  		<ol class="carousel-indicators">
		    <li data-target="#magazineCarousal" data-slide-to="0" class="active"></li>
		    <li data-target="#magazineCarousal" data-slide-to="1"></li>
		    <li data-target="#magazineCarousal" data-slide-to="2"></li>
			<li data-target="#magazineCarousal" data-slide-to="3"></li>
		</ol>

  		<!-- Wrapper for slides -->
  		<div class="carousel-inner" role="listbox">
		    <div class="item active">
		      <%= image_tag("M&S_mainImage.png", alt: "M&S Dress") %>
		    </div>
		
		    <div class="item">
		      <%= image_tag("M&S_secPage.png", alt: "M&S Dress") %>
		    </div>

		    <div class="item">
		      <%= image_tag("M&S_thrPage.png", alt: "M&S Dress") %>
		    </div>

			<div class="item">
				<%= image_tag("M&S_fourPage.png", alt: "M&S Dress") %>
			</div>
  		</div>

		<!-- Left and right controls -->
  		<a class="left carousel-control" href="#magazineCarousal" role="button" data-slide="prev">
			<span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
			<span class="sr-only">Previous</span>
		</a>
		<a class="right carousel-control" href="#magazineCarousal" role="button" data-slide="next">
			<span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
			<span class="sr-only">Next</span>
		</a>
	</div>
	<!-- Modal -->
	<div id="loginModal" class="modal fade" role="dialog">
		<div class="modal-dialog">
			<!-- Modal content-->
			<div class="modal-content" ng-controller="loginRegSHCtrl">
				<div class="modal-header">
					<button type="button" class="close" data-dismiss="modal">&times;</button>
					<div id="loginHeader" ng-show="isVisible">
						<h4 class="modal-title"><span class="glyphicon glyphicon-lock"></span> MADS Login</h4>
						Are you a new user? <a href="#" ng-click="showHide()">Sign-Up</a>
					</div>
					<div id="registerHeader" ng-hide="isVisible">
						<h4 class="modal-title"><span class="glyphicon glyphicon-lock"></span> MADS Register</h4>
						Have you already registered? <a href="#" ng-click="showHide()">Sign-in</a>
					</div>
				</div>
				<div class="modal-body" ng-show="isSelected">
					 <form class="form-horizontal" role="form" ng-submit="elogin()">
						<div class="form-group">
							<label class="control-label col-sm-2 col-md-4" for="email"><span class="glyphicon glyphicon-user"></span> Username:</label>
							<div class="col-sm-10 col-md-6">
								<input type="email" class="form-control" id="email" placeholder="Enter email" ng-model="email">
							</div>
						</div>
						<div class="form-group">
							<label class="control-label col-sm-2 col-md-4" for="pwd"><span class="glyphicon glyphicon-eye-open"></span> Password:</label>
							<div class="col-sm-10 col-md-6">
								<input type="password" class="form-control" id="pwd" placeholder="Enter password" ng-model="password">
							</div>
						</div>
						<div class="form-group">
							<div class="col-sm-offset-2 col-sm-10">
								<div class="checkbox">
									<label><input type="checkbox" ng-model="rememberMe"> Remember me</label>
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="col-sm-offset-2 col-sm-10">
								<button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-off"></span> Login</button>
								<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
							</div>
						</div>
					</form>
				</div>
				<div class="modal-body" ng-hide="isSelected">
					<form class="form-horizontal" role="form" ng-submit="elogin()">
						<div class="form-group">
							<label class="control-label col-sm-2 col-md-4" for="email"><span class="glyphicon glyphicon-user"></span> Email:</label>
							<div class="col-sm-10 col-md-6">
								<input type="email" class="form-control" id="email" placeholder="Enter email" ng-model="email">
							</div>
						</div>
						<div class="form-group">
							<label class="control-label col-sm-2 col-md-4" for="title"><span class="glyphicon glyphicon-user"></span> Title:</label>
							<div class="col-sm-10 col-md-6">
								<input type="text" class="form-control" id="title" placeholder="Select Title" ng-model="title">
							</div>
						</div>
						<div class="form-group">
							<label class="control-label col-sm-2 col-md-4" for="firstName"><span class="glyphicon glyphicon-user"></span> First Name:</label>
							<div class="col-sm-10 col-md-6">
								<input type="text" class="form-control" id="firstName" placeholder="Enter First Name" ng-model="firstName">
							</div>
						</div>
						<div class="form-group">
							<label class="control-label col-sm-2 col-md-4" for="lastName"><span class="glyphicon glyphicon-user"></span> Last Name:</label>
							<div class="col-sm-10 col-md-6">
								<input type="text" class="form-control" id="lastName" placeholder="Enter First Name" ng-model="lastName">
							</div>
						</div>
						<div class="form-group">
							<label class="control-label col-sm-2 col-md-4" for="pwd"><span class="glyphicon glyphicon-eye-open"></span> Password:</label>
							<div class="col-sm-10 col-md-6">
								<input type="password" class="form-control" id="pwd" placeholder="Enter password" ng-model="password">
							</div>
						</div>
						<div class="form-group">
							<label class="control-label col-sm-2 col-md-4" for="confpwd"><span class="glyphicon glyphicon-eye-open"></span> Confirm Password:</label>
							<div class="col-sm-10 col-md-6">
								<input type="password" class="form-control" id="confpwd" placeholder="Confirm password" ng-model="confPassword">
							</div>
						</div>
						<div class="form-group">
							<div class="col-sm-offset-2 col-sm-10">
								<div class="checkbox">
									<label><input type="checkbox" ng-model="optIn"> Subscribe me for emails</label>
								</div>
							</div>
						</div>
						<div class="form-group">
							<div class="col-sm-offset-2 col-sm-10">
								<button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-off"></span> Login</button>
								<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
							</div>
						</div>
					</form>
				</div>
				<div class="modal-footer">
					<span class="text-primary">In case of forgot password, please contact your administrator to reset it for you.</span>
				</div>
			</div>
		</div>
	</div>
    </body>
</html>
